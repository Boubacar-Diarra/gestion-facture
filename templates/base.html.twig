<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/base.css') }}">
        {% include "coummun/style.twig" %}
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
        {#<!-----erreur d'ajout ---->#}
        {% if  app.session.get('error') is defined and app.session.get('error') == true %}
            {{ app.session.set('error', false) }}
            {#<!-- on affiche un modal ici pour notifier a l'user qu'il vient d'etre ajouter -->#}
            <div class="modal fade" id="error" tabindex="-1" role="dialog" aria-labelledby="error" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{ app.session.get('errorMessage')|capitalize}}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn s-card" data-dismiss="modal">Fermer</button>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}
        <script>
            //error modal
            $('#error').modal('show')
            $('#error').modal({
                keyboard: false
            })
        </script>
    </body>
</html>
